@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
        <div class="row">
            <h1 class="main-title">Laboratory work № 1</h1>
        </div>
        <hr>
        <div class="row">
            <h3 class="secondary-title">List:</h3>
            <br>
            <ol class="elements-list">
                @for (var counter = 1; counter < 3; ++counter)
                {<li>Item № @counter of the list</li>}
            </ol>
        </div>
        <hr>
        <div class="row">
            <h3 class="secondary-title">Form:</h3>
            <br>
            <form class="col-6 mt-3" method="get">
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="checkbox1">
                    <label class="form-check-label" for="exampleCheck1">Checkbox 1</label>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck2" name="checkbox2">
                    <label class="form-check-label" for="exampleCheck2">Checkbox 2</label>
                </div>

                <div class="row mb-3 mt-2">
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexradio" id="flexRadioDefault1"
                                   checked>
                            <label class="form-check-label" for="flexRadioDefault1">
                                Radio 1
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexradio" id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2">
                                Radio 2
                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexradio" id="flexRadioDefault3">
                            <label class="form-check-label" for="flexRadioDefault3">
                                Radio 3
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Login</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="login"
                           aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" required>
                </div>
                
                <div class="row mb-2">
                    <div class="col-md-4">
                        <select asp-items="@ViewData["List"] as SelectList"></select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>