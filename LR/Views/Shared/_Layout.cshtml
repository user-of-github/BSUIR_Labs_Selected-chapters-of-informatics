@using Microsoft.AspNetCore.Identity
@using LR.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    <!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>@ViewData["Title"] - LR</title>
      <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

      <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
      <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
      <link rel="stylesheet" href="~/LR.styles.css" asp-append-version="true" />
    </head>
    <body>
      <header class="header">
        <div class="container">
          <nav class="navbar navbar-expand-lg">
            <div class="container-fluid" style="align-items: center;">
              <a class="navbar-brand nav-brand-header" href="#">Web labs</a>
              @await Component.InvokeAsync("Menu")


              <partial name="_LoginPartial" />

              @if (SignInManager.IsSignedIn(User)) {
              <partial name="_UserPartial" />
                }

            </div>
          </nav>
        </div>
      </header>

      <main class="main">@RenderBody()</main>

      <footer class="footer">
        <div class="container">
          <div class="d-flex footer-links">
            <a href="https://facebook.com" target="new">
              <i class="fa-brands fa-facebook fa-2xl footer-icons"></i>
            </a>
            <a href="https://vk.com" target="new">
              <i class="fa-brands fa-vk fa-2xl footer-icons"></i>
            </a>
            <a href="https://twitter.com" target="new">
              <i class="fa-brands fa-twitter fa-2xl footer-icons"></i>
            </a>
          </div>
        </div>
      </footer>


      <script src="~/lib/jquery/dist/jquery.js"></script>
      <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
      <script src="~/js/site.js" asp-append-version="true"></script>
      @await RenderSectionAsync("Scripts", required: false)
    </body>
  </html>
